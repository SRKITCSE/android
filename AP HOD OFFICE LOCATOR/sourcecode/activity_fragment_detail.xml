
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#22529B"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/fab_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/office" />

            <ImageView
                android:layout_width="355dp"
                android:layout_height="246dp"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#22529B"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/fab_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/descriptionhead" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0095B6"
                android:text="Large Text"
                android:textStyle="italic"
                android:id="@+id/description"
                android:gravity="fill"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="35sp"
                android:layout_below="@+id/LinearLayout01"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#22529B"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/fab_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/namehead" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0095B6"
                android:text="Large Text"
                android:id="@+id/name"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="38sp"
                android:layout_below="@+id/LinearLayout01"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#22529B"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/fab_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/desighead" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0095B6"
                android:text="Large Text"
                android:id="@+id/designation"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="38sp"
                android:layout_below="@+id/LinearLayout01"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#22529B"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/fab_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/addresshead" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0095B6"
                android:text="Large Text"
                android:id="@+id/address"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="38sp"
                android:layout_below="@+id/LinearLayout01"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#22529B"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/fab_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/landhead" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0095B6"
                android:text="Large Text"
                android:id="@+id/landmark"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="38sp"
                android:layout_below="@+id/LinearLayout01"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#22529B"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/fab_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/bushead" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0095B6"
                android:text="Large Text"
                android:id="@+id/busnumbers"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="38sp"
                android:layout_below="@+id/LinearLayout01"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#22529B"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/fab_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/urlhead" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0095B6"
                android:text="Large Text"
                android:id="@+id/url"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="38sp"
                android:linksClickable="true"
                android:layout_below="@+id/LinearLayout01"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <WebView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/mapView" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>